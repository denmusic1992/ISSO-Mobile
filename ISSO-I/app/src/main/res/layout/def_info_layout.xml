<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="10dp"
                android:text="Дополнительные характеристики дефекта"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layout1"
                android:background="@drawable/cell_borders_light">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/layout11"
                    android:background="@drawable/cell_shape_light"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp">
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:id="@+id/layout111"
                        android:background="@drawable/cell_shape_light"
                        android:layout_height="match_parent"
                        android:layout_margin="0dp">
                        <TextView
                            android:layout_margin="4dp"
                            android:layout_width="match_parent"
                            android:text="Локализация"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_weight="2"
                        android:id="@+id/layout112"
                        android:background="@drawable/cell_shape_light"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_margin="3dp"
                            android:id="@+id/tvLocalizationDef"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"/>
                        </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/cell_shape_light"
                    android:orientation="horizontal"
                    android:id="@+id/layout12"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp">
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:id="@+id/layout121"
                        android:background="@drawable/cell_shape_light"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_margin="3dp"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:text="Дополнительная информация"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_weight="2"
                        android:id="@+id/layout122"
                        android:background="@drawable/cell_shape_light"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_margin="3dp"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:id="@+id/tvAdvancedInfoDef"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_margin="10dp"
                android:text="Характеристика дефекта по ремонтопригодности"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layout2"
                android:background="@drawable/cell_borders_light">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/layout21"
                    android:background="@drawable/cell_shape_light"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp">
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:background="@drawable/cell_shape_light"
                        android:id="@+id/layout211"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_margin="3dp"
                            android:gravity="center_vertical"
                            android:text="Прямая ремонтная работа"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_weight="2"
                        android:id="@+id/layout212"
                        android:background="@drawable/cell_shape_light"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:id="@+id/tvRemInfoDef"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/cell_shape_light"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout22"
                    android:layout_margin="0dp">
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:background="@drawable/cell_shape_light"
                        android:id="@+id/layout221"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:id="@+id/tvRemDimensionDef"
                            android:text="Объем ремонтной работы"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_weight="2"
                        android:id="@+id/layout222"
                        android:background="@drawable/cell_shape_light"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:id="@+id/tvRemSizeInfoDef"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>