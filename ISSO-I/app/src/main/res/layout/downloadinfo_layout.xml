<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:baselineAligned="false"
              android:descendantFocusability="blocksDescendants"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_width="0dip"
        android:layout_weight="5"
        android:id="@+id/linLayoutSynchronize"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:id="@+id/tvMainHeaderInfo"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:id="@+id/tvNaimenovanie"
                    android:text="Наименование:"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:id="@+id/tv_name"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:id="@+id/tvData"
                    android:text="Дата создания/изменения:"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:id="@+id/tv_date"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:id="@+id/tvOpisanie"
                    android:text="Описание:"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:id="@+id/tv_description"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:id="@+id/tvColichestvo"
                    android:text="Количество ИССО:"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:id="@+id/tv_numofisso"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RadioButton
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/radiobutton_download"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>
</LinearLayout>