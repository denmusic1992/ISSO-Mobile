<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:id="@+id/LayoutTableInfo"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/isso_tabanim_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">
        <android.support.v7.widget.Toolbar
            android:id="@+id/isso_tabanim_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways" />
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:id="@+id/layoutABDM"
        android:layout_height="wrap_content">
        <com.development.aisisso.isso_i.CustomScrollView
            android:id="@+id/myScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/linLayoutScroll"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <TableLayout
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:id="@+id/LayoutNameColumns"
                    android:layout_height="match_parent">
                </TableLayout>
                <com.development.aisisso.isso_i.CustomHorizontalScrollView
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:id="@+id/horizontalScrollView"
                    android:layout_height="match_parent">
                    <TableLayout
                        android:id="@+id/LayoutInfoColumns"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </TableLayout>
                </com.development.aisisso.isso_i.CustomHorizontalScrollView>
            </LinearLayout>
        </com.development.aisisso.isso_i.CustomScrollView>
    </LinearLayout>
</LinearLayout>