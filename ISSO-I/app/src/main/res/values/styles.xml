<resources>

    <!--&lt;!&ndash; Base application theme. &ndash;&gt;-->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
    <!--</style>-->

    <style name="Advanced" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AdvancedLight" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="AppThemeLight" parent="android:Theme.Holo.Light">
        <item name="background">@color/background_material_light</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="DialogTheme" parent="@style/Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">false</item>
    </style>
    <style name="DialogThemeLight" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="background">@color/background_material_light</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


    <style name="FullscreenActionBarStyleLight" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/background_material_light</item>
    </style>

    <style name="StyleColorLight" parent="">
        <item name="android:background">#dcdcdc</item>
    </style>

    <style name="StyleColorDark" parent="">
        <item name="android:background">#323232</item>
    </style>

    <style name="TreeNodeStyleCustom">
        <item name="android:paddingLeft">20dp</item>
        <!--<item name="android:showDividers">middle</item>-->
        <!--<item name="android:divider">@android:drawable/divider_horizontal_bright</item>-->
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.MyApp.HeaderBar.SpinnerLight" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:textColor">@color/fabMenuLightPressed</item>
    </style>
    <style name="Widget.MyApp.HeaderBar.SpinnerDark" parent="Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
    </style>
    <style name="TreeNodeStyle">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <!--<item name="android:paddingLeft">20dp</item>-->
    </style>
</resources>
