                        </Entry>
                        <Label Grid.Column="1" Text="{Binding Bdrg}" Style="{StaticResource LabelStandard}" HorizontalOptions="Fill" Margin="0"
                           HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                    </Grid>
                    <Frame BorderColor="Accent" Padding="5" CornerRadius="5" HorizontalOptions="FillAndExpand" Margin="10"
                           BackgroundColor="Transparent">
                        <Grid x:Name="GridQuantityInfo" >
                            <Grid.ColumnDefinitions>
