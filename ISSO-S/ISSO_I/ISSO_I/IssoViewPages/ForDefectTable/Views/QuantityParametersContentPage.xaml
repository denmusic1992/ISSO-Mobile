                    <Label x:Name="TitleLabel" Text="{Binding ParameterName}" Style="{StaticResource LabelSmall}" HorizontalOptions="Fill"
                       VerticalTextAlignment="Center" HorizontalTextAlignment="Start" Margin="10" />
