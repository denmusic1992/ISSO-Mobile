<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:customRenderes="clr-namespace:ISSO_I.CustomRenderes"
             xmlns:cachedImage="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             x:Class="ISSO_I.IssoViewPages.ForDefectTable.Views.AdditionalDefectParametersContentView">
    <ContentView.Content>
        <ScrollView Margin="0, 0, 0, 30">
            <StackLayout>
                <Label Margin="10" HorizontalOptions="Fill" Text="Дополнительные характеристики дефекта"
                 Style="{StaticResource LabelStandard}" HorizontalTextAlignment="Center"/>
                <Frame BorderColor="Accent" Padding="5" CornerRadius="5" HorizontalOptions="FillAndExpand" Margin="10"
                 BackgroundColor="Transparent">
                    <StackLayout>
                        <Label Text="Локализация" Style="{StaticResource LabelSmall}" HorizontalOptions="Fill"
                         VerticalTextAlignment="Center" HorizontalTextAlignment="Start" Margin="10" />
                        <customRenderes:CustomEditor Style="{StaticResource LabelStandard}" Margin="0" VerticalOptions="FillAndExpand"
                          Placeholder="[укажите локализацию (необязательно)]" PlaceholderColor="Gray"
                          HorizontalOptions="Fill" Text="{Binding Localization}" />
                    </StackLayout>
                </Frame>
                <Frame BorderColor="Accent" Padding="5" CornerRadius="5" HorizontalOptions="FillAndExpand" Margin="10"
                 BackgroundColor="Transparent">
                    <StackLayout>
                        <Label Text="Дополнительная информация" Style="{StaticResource LabelSmall}" HorizontalOptions="Fill"
                         VerticalTextAlignment="Center" HorizontalTextAlignment="Start" Margin="10" />
                        <customRenderes:CustomEditor Style="{StaticResource LabelStandard}" Margin="0" VerticalOptions="FillAndExpand"
                          Placeholder="[укажите доп. информацию (необязательно)]" PlaceholderColor="Gray"
                          HorizontalOptions="Fill" Text="{Binding AdditionalInformation}"/>
                    </StackLayout>
                </Frame>
                <Label Margin="10" HorizontalOptions="Fill" Text="Фотография дефекта"
                       Style="{StaticResource LabelStandard}" HorizontalTextAlignment="Center" />
                <Frame BorderColor="Accent" Padding="5" CornerRadius="5" HorizontalOptions="Fill" Margin="10" VerticalOptions="Center"
                       BackgroundColor="Transparent">
                    <AbsoluteLayout VerticalOptions="CenterAndExpand">
                        <cachedImage:CachedImage AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1"
                                                 AbsoluteLayout.LayoutFlags="All" Aspect="AspectFit"
                                                 Source="{Binding DefectImage}">
                            <cachedImage:CachedImage.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding PictureTouched}"></TapGestureRecognizer>
                            </cachedImage:CachedImage.GestureRecognizers>
                        </cachedImage:CachedImage>
                        <ImageButton AbsoluteLayout.LayoutBounds="0, 0, 20, 20"
                                     AbsoluteLayout.LayoutFlags="XProportional, YProportional"
                                     BackgroundColor="Transparent" Source="close_button_black.png" Command="{Binding CloseAndDelete}" IsVisible="{Binding HasPhoto}"/>
                        <ImageButton AbsoluteLayout.LayoutBounds="1, 0, 50, 50"
                                     AbsoluteLayout.LayoutFlags="XProportional, YProportional" BackgroundColor="Accent" CornerRadius="10"
                                     Source="camera_light.png" Command="{Binding AddDefectPhoto}"/>
                    </AbsoluteLayout>
                </Frame>
