<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:customRenderers1="clr-namespace:ISSO_S.iOS.CustomRenderers"
             x:Class="ISSO_S.FullScreenImage">
    <ContentPage.Content>
        <customRenderers1:PinchToZoomContainer HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <customRenderers1:PinchToZoomContainer.Content>
                <Image x:Name="fullScreenImage"  Aspect="AspectFit" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
            </customRenderers1:PinchToZoomContainer.Content>
        </customRenderers1:PinchToZoomContainer>
    </ContentPage.Content>
</ContentPage>