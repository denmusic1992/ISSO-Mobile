                                               HorizontalOptions="Center" Aspect="AspectFit">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="Btn_fullscr_Clicked"/>
                                        </Image.GestureRecognizers>
                                    </Image>
